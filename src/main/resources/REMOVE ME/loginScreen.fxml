<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<AnchorPane prefHeight="297.0" prefWidth="350.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.loginController">
    <VBox alignment="CENTER" layoutX="21.0" layoutY="40.0" prefHeight="217.0" prefWidth="308.0" style="-fx-border-color: black; -fx-border-radius: 10;">
        <HBox>
            <padding>
                <Insets bottom="10.0" left="20.0" top="10.0" />
            </padding>
            <Label fx:id="loginLabel" text="Login" />
        </HBox>
        <HBox alignment="CENTER" spacing="25.0">
            <Label fx:id="usernameLabel" text="Username" />
            <TextField fx:id="loginUsernameTxt" />
        </HBox>
        <HBox alignment="CENTER" spacing="25.0">
            <padding>
                <Insets bottom="10.0" top="10.0" />
            </padding>
            <Label fx:id="passwordLabel" text="Password" />
            <TextField fx:id="loginPasswordTxt" />
        </HBox>
        <HBox alignment="CENTER" spacing="20.0">
            <padding>
                <Insets bottom="10.0" top="10.0" />
            </padding>
            <Button fx:id="loginBtn" mnemonicParsing="false" onAction="#actionLogin" text="Login" />
            <Button fx:id="exitBtn" mnemonicParsing="false" onAction="#actionExit" text="Exit" />
        </HBox>
        <HBox alignment="CENTER" spacing="15.0">
            <padding>
                <Insets top="10.0" />
            </padding>
            <Label fx:id="locationLabel" text="Location" />
            <TextField fx:id="locationTxt" prefHeight="25.0" prefWidth="119.0" />
        </HBox>
    </VBox>
</AnchorPane>
